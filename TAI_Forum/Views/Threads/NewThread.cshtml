@using System.Web
@model TAI_Forum.Models.NewThreadModel

@{ ViewBag.Title = "Nowy wątek"; }

@using (Html.BeginForm("CreateNewThread", "Threads", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Utwórz nowy wątek</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Topic, new { @class = "control-label" })
        <div class="threadParthBox">
            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control threadTextBox" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "control-label" })
        <div class="threadParthBox">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control threadTextArea" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags, new { @class = "control-label" })
        <div class="threadParthBox">
            @Html.TextBoxFor(m => m.Tags, new { @class = "form-control threadTextBox" })
        </div>
    </div>
    <div class="form-group">
        <div class="">
            <input type="submit" class="btn btn-default" value="Utwórz wątek" />
        </div>
    </div>
}
