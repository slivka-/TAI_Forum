@model TAI_Forum.Models.AccountEditModel

@{
    ViewBag.Title = "Profil";
}

<h2>@ViewBag.Title</h2>
<h4>Edytuj dane profilu.</h4>

@if (Model.EditMessage != null)
{
    <div class="alert alert-@Model.EditMessageClass alert-dismissable fade in routes-main-alert" id="searchAlert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @Model.EditMessage
    </div>
}

@using (Html.BeginForm("ChangeLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewLoginPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewLoginPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Zmień login" />
        </div>
    </div>
}

